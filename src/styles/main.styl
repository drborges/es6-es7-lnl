pre
  margin: 5px !important
  border: 1px solid #333
  font-size: 12px
  flex-grow: 1
  max-width: 600px
  max-height: 200px

.repl
  display: flex
  flex-flow: column

code:focus
  outline: none

.snackbar
  position: absolute
  width: 100%
  top: 0
  padding: 30px 0 10px 0
  z-index: 1
  color: #fff
  text-align: center
  background-color: #f30
  box-shadow: 0px 2px 5px #f30
  -webkit-transition: top 0.5s;


.snackbar.hidden
  top: -100px

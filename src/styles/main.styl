@import 'prism/themes/prism-tomorrow.css'
// Check out "bower_components/prism/themes/" for available themes

h2
  margin: 20px

i.fa
  font-size: 10px
  vertical-align: middle
  margin: 5px

p
  font-size: 18px

blockquote
  text-align: right

cite
  font-style: italic
  font-size: 14px

.repl
  display: flex
  flex-flow: column

pre
  margin: 5px !important
  padding: 0 !important
  font-size: 12px
  flex-grow: 1
  max-width: 600px
  max-height: 200px
  border: 1px solid #333

pre:hover
  border: 1px solid #fff

code
  display: block
  padding: 15px

code:focus
  outline: none

code:hover
  cursor: default

code[contenteditable=true]:hover
  cursor: text

.snackbar
  position: absolute
  width: 100%
  top: 0
  padding: 30px 0 10px 0
  z-index: 2000
  color: #fff
  text-align: center
  background-color: #f30
  box-shadow: 0px 2px 5px #f30
  -webkit-transition: top 0.5s


.snackbar.hidden
  top: -100px
